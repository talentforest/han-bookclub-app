{
  "singleQuote": true,
  "semi": true,
  "tabWidth": 2,
  "trailingComma": "all",
  "printWidth": 80,
  "endOfLine": "lf",
  "arrowParens": "avoid",
  "plugins": [
    "@trivago/prettier-plugin-sort-imports",
    "prettier-plugin-tailwindcss"
  ],
  "importOrder": [
    "^react(/.*)?$",
    "^react-router-dom(/.*)?$",
    "^react-dom(/.*)?$",
    "<THIRD_PARTY_MODULES>",
    "^(recoil|data)(/.*)?$",
    "^@/data(.*)$",
    "^@/api(.*)$",

    "^@/appConstants(.*)$",

    "^@/hooks(.*)$",

    "^@/utils(.*)$",

    "^@/types(.*)$",

    "^@/routes/(.*)$",
    "^@/layout/(.*)$",
    "^@/components/(.*)$"
  ],
  "importOrderSeparation": true,
  "importOrderSortSpecifiers": true,
  "importOrderGroupNamespaceSpecifiers": true
}
